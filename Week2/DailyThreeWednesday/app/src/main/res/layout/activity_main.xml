<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:text="Rrsult from EventBus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tvEventBus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/colorAccent"
        android:textSize="25sp" />

    <TextView
        android:text="Rrsult from workers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tvResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/colorAccent"
        android:textSize="25sp" />

    <!--Java-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Java" />

    <Button
        android:id="@+id/btnThread"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onHandleWorkers"
        android:text="@string/start_a_thread" />

    <Button
        android:id="@+id/btnRunnable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onHandleWorkers"
        android:text="@string/start_a_runnable" />

    <!--Android-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Android" />

    <Button
        android:id="@+id/btnAsyncTask"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onHandleWorkers"
        android:text="@string/start_async_task" />

    <!--RxJava (Third Party)-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="RxJava" />

    <Button
        android:id="@+id/btnRxJava"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onHandleWorkers"
        android:text="RxJava" />


</LinearLayout>